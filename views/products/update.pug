extends ../layout

block content
    h1 Update Existing product
    form(action="/products/update/"+product._id,method="post")
        .form-group
            label(for="name") Product Name
            input#name(type="text", class="form-control",name="name", value=product.name)
        .form-group
            label(for="price") price
            input#price(type="text", class="form-control",name="price", value=product.price)
        .form-group
            label(for="id")  ID
            input#id(type="text", class="form-control",name="id", value=product.id)
        .form-group
            label(for="colour") Colour
            input#colour(type="text", class="form-control",name="colour", value=product.colour)
        input(type="submit", class="btn btn-info")
