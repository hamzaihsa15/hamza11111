extends layout

block content
  h1 remove data 
  - var total=0;
    table.table
      thead
        tr
          th product Name
          th price
          th product ID
          th colour
          th Remove 
      tbody
        each item in cart
          - total +=Number(item.fee);
          tr
            td=item.name
            td=item.price
            td=item.id
            td=item.colour
            td 
              a(href="/products/cart/remove/"+item._id,class="btn btn-danger") Remove
      tfoot
        tr
            td TOTAL
            td=total
